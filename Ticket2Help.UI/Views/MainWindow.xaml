<Window x:Class="Ticket2Help.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ticket2Help - Sistema de Gestão de Tickets" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="900">

    <Window.Resources>
        <!-- Estilos para acessibilidade -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="AlternatingRowBackground" Value="LightGray"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="DarkBlue" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ticket2Help" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock x:Name="LblUsuarioAtual" Foreground="White" FontSize="14" VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Conteúdo Principal -->
        <TabControl Grid.Row="1" x:Name="MainTabControl" Margin="10">

            <!-- Tab Meus Tickets -->
            <TabItem Header="Meus Tickets" FontSize="14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Meus Tickets" Style="{StaticResource HeaderTextStyle}"/>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="BtnCriarTicketHardware" Content="Criar Ticket Hardware" 
                                Style="{StaticResource ButtonStyle}" Background="LightBlue"
                                Click="BtnCriarTicketHardware_Click"/>
                        <Button x:Name="BtnCriarTicketSoftware" Content="Criar Ticket Software" 
                                Style="{StaticResource ButtonStyle}" Background="LightGreen"
                                Click="BtnCriarTicketSoftware_Click"/>
                        <Button x:Name="BtnAtualizarMeusTickets" Content="Atualizar" 
                                Style="{StaticResource ButtonStyle}"
                                Click="BtnAtualizarDados_Click"/>
                    </StackPanel>

                    <DataGrid Grid.Row="2" x:Name="DataGridMeusTickets" Style="{StaticResource DataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="80"/>
                            <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="300"/>
                            <DataGridTextColumn Header="Data Criação" Binding="{Binding DataCriacao, StringFormat=dd/MM/yyyy HH:mm}" Width="120"/>
                            <DataGridTextColumn Header="Tempo Espera" Binding="{Binding TempoEspera}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Tab Dashboard (só para técnicos) -->
            <TabItem x:Name="TabDashboard" Header="Dashboard" FontSize="14">
                <ScrollViewer>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Dashboard - Estatísticas dos Tickets" Style="{StaticResource HeaderTextStyle}"/>

                        <Button Grid.Row="1" x:Name="BtnGerarMapas" Content="Gerar Relatórios Detalhados" 
                                Style="{StaticResource ButtonStyle}" Background="Purple" Foreground="White"
                                HorizontalAlignment="Left" Click="BtnGerarMapas_Click"/>

                        <!-- Estatísticas Gerais -->
                        <Border Grid.Row="2" Background="LightBlue" Padding="10" Margin="0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="5">
                                    <TextBlock Text="Tickets Hoje" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LblTotalHoje" Text="0" FontSize="24" FontWeight="Bold" 
                                               HorizontalAlignment="Center" Foreground="DarkBlue"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="0" Margin="5">
                                    <TextBlock Text="Pendentes" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LblPendentes" Text="0" FontSize="24" FontWeight="Bold" 
                                               HorizontalAlignment="Center" Foreground="Red"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Grid.Row="0" Margin="5">
                                    <TextBlock Text="Em Atendimento" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LblEmAtendimento" Text="0" FontSize="24" FontWeight="Bold" 
                                               HorizontalAlignment="Center" Foreground="Orange"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" Grid.Row="0" Margin="5">
                                    <TextBlock Text="% Atendidos" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LblTicketsAtendidos" Text="0%" FontSize="24" FontWeight="Bold" 
                                               HorizontalAlignment="Center" Foreground="Green"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="5">
                                    <TextBlock Text="% Resolvidos" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LblTicketsResolvidos" Text="0%" FontSize="18" FontWeight="Bold" 
                                               HorizontalAlignment="Center" Foreground="DarkGreen"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="1" Margin="5">
                                    <TextBlock Text="% Não Resolvidos" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LblTicketsNaoResolvidos" Text="0%" FontSize="18" FontWeight="Bold" 
                                               HorizontalAlignment="Center" Foreground="DarkRed"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Grid.Row="1" Margin="5">
                                    <TextBlock Text="Média Hardware (h)" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LblMediaHardware" Text="0h" FontSize="18" FontWeight="Bold" 
                                               HorizontalAlignment="Center" Foreground="DarkBlue"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" Grid.Row="1" Margin="5">
                                    <TextBlock Text="Média Software (h)" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LblMediaSoftware" Text="0h" FontSize="18" FontWeight="Bold" 
                                               HorizontalAlignment="Center" Foreground="DarkBlue"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Gráficos simples com ProgressBar -->
                        <StackPanel Grid.Row="3" Margin="0,10">
                            <TextBlock Text="Resumo Visual" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="10">
                                    <TextBlock Text="Taxa de Resolução" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <ProgressBar x:Name="ProgressResolucao" Height="30" Background="LightGray" 
                                                 Foreground="Green" Minimum="0" Maximum="100" Value="0"/>
                                    <TextBlock x:Name="LblProgressResolucao" Text="0% resolvidos" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10">
                                    <TextBlock Text="Taxa de Atendimento" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <ProgressBar x:Name="ProgressAtendimento" Height="30" Background="LightGray" 
                                                 Foreground="Blue" Minimum="0" Maximum="100" Value="0"/>
                                    <TextBlock x:Name="LblProgressAtendimento" Text="0% atendidos" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <Border Grid.Row="2" Background="LightGray" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Status: " FontWeight="Bold"/>
                <TextBlock x:Name="LblStatus" Text="Sistema pronto"/>
                <TextBlock Text=" | Última atualização: " Margin="20,0,0,0"/>
                <TextBlock x:Name="LblUltimaAtualizacao" Text=""/>
            </StackPanel>
        </Border>
    </Grid>
</Window>