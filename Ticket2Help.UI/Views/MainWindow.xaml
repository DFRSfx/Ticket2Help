<Window x:Class="Ticket2Help.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ticket2Help - Sistema de Gestão de Tickets" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        MinHeight="700" MinWidth="1000"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Cores modernas -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#3498DB"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#E74C3C"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F39C12"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#8E44AD"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="DarkGrayBrush" Color="#7F8C8D"/>

        <!-- Estilos modernos -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2" Color="Gray"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#21618C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D68910"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style x:Key="ModernTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGrayBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,3"
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGrayBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="MinHeight" Value="120"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="15" Opacity="0.1" Color="Gray"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource LightGrayBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Moderno -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="🎫" FontSize="28" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Ticket2Help" Foreground="White" FontSize="28" FontWeight="Bold"/>
                        <TextBlock Text="Sistema de Gestão de Tickets" Foreground="#BDC3C7" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Border Background="#34495E" CornerRadius="20" Padding="15,8" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock x:Name="LblUtilizadorNome" Text="Utilizador" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock x:Name="LblUtilizadorTipo" Text="Colaborador" Foreground="#BDC3C7" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Button x:Name="BtnLogout" Content="Sair" Style="{StaticResource DangerButtonStyle}" 
                            Click="BtnLogout_Click" Width="80"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Conteúdo Principal -->
        <TabControl Grid.Row="1" x:Name="MainTabControl" 
                    Style="{StaticResource ModernTabControlStyle}" 
                    Margin="0,10,0,0">

            <!-- Tab Meus Tickets -->
            <TabItem Header="📋 Os Meus Tickets" Style="{StaticResource ModernTabItemStyle}">
                <Grid Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Cabeçalho e Acções -->
                    <Border Grid.Row="0" Style="{StaticResource ModernCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Os Meus Tickets" Style="{StaticResource HeaderTextStyle}"/>

                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <Button x:Name="BtnCriarTicketHardware" Content="🔧 Criar Ticket Hardware" 
                                        Style="{StaticResource ModernButtonStyle}" Background="#3498DB"
                                        Click="BtnCriarTicketHardware_Click"/>
                                <Button x:Name="BtnCriarTicketSoftware" Content="💻 Criar Ticket Software" 
                                        Style="{StaticResource SuccessButtonStyle}"
                                        Click="BtnCriarTicketSoftware_Click"/>
                                <Button x:Name="BtnActualizarMeusTickets" Content="🔄 Actualizar" 
                                        Style="{StaticResource ModernButtonStyle}" Background="{StaticResource InfoBrush}"
                                        Click="BtnActualizarDados_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Lista de Tickets -->
                    <Border Grid.Row="1" Style="{StaticResource ModernCardStyle}">
                        <DataGrid x:Name="DataGridMeusTickets" Style="{StaticResource ModernDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="350">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Data Criação" Binding="{Binding DataCriacao, StringFormat=dd/MM/yyyy HH:mm}" Width="140">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="120">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Tempo Espera" Binding="{Binding TempoEspera}" Width="120">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab Atendimento (só para técnicos) -->
            <TabItem x:Name="TabAtendimento" Header="🛠️ Atendimento" Style="{StaticResource ModernTabItemStyle}">
                <Grid Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Cabeçalho -->
                    <Border Grid.Row="0" Style="{StaticResource ModernCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="Tickets Para Atendimento" Style="{StaticResource HeaderTextStyle}"/>

                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <ComboBox x:Name="ComboEstrategiaAtendimento" Width="200" Height="40" 
                                          FontSize="13" Margin="0,0,10,0" SelectionChanged="ComboEstrategiaAtendimento_SelectionChanged">
                                    <ComboBoxItem Content="FIFO (Primeiro a entrar, primeiro a sair)" Tag="FIFO" IsSelected="True"/>
                                    <ComboBoxItem Content="Prioridade Hardware" Tag="PrioridadeHardware"/>
                                </ComboBox>
                                <Button x:Name="BtnActualizarAtendimento" Content="🔄 Actualizar Lista" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="BtnActualizarAtendimento_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Lista de Tickets para Atendimento -->
                    <Border Grid.Row="1" Style="{StaticResource ModernCardStyle}">
                        <DataGrid x:Name="DataGridTicketsAtendimento" Style="{StaticResource ModernDataGridStyle}"
                                  MouseDoubleClick="DataGridTicketsAtendimento_MouseDoubleClick">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Colaborador" Binding="{Binding CodigoColaborador}" Width="120">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="300">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Data Criação" Binding="{Binding DataCriacao, StringFormat=dd/MM/yyyy HH:mm}" Width="140">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Acções" Width="120">
                                    <DataGridTemplateColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="Padding" Value="10"/>
                                        </Style>
                                    </DataGridTemplateColumn.HeaderStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="✅ Atender" Style="{StaticResource SuccessButtonStyle}" 
                                                    FontSize="11" Padding="8,4" Height="30" Width="100"
                                                    Click="BtnAtenderTicket_Click" Tag="{Binding Id}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab Dashboard (só para técnicos) -->
            <TabItem x:Name="TabDashboard" Header="📊 Dashboard" Style="{StaticResource ModernTabItemStyle}">
                <ScrollViewer Background="Transparent">
                    <StackPanel Margin="20">
                        <!-- Cabeçalho -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Dashboard - Estatísticas dos Tickets" Style="{StaticResource HeaderTextStyle}"/>
                                    <TextBlock Text="Visão geral do sistema de atendimento" Style="{StaticResource SubHeaderTextStyle}"/>
                                </StackPanel>

                                <Button Grid.Column="1" x:Name="BtnGerarMapas" Content="📈 Relatórios Detalhados" 
                                        Style="{StaticResource ModernButtonStyle}" Background="{StaticResource InfoBrush}"
                                        Click="BtnGerarMapas_Click" Height="50" Padding="20,10"/>
                            </Grid>
                        </Border>

                        <!-- Métricas Principais -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Métricas em Tempo Real" 
                                           Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,20"/>

                                <UniformGrid Grid.Row="1" Columns="4" Rows="2">
                                    <!-- Linha 1 -->
                                    <Border Style="{StaticResource MetricCardStyle}" Background="#E8F6F3">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="📅" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="Tickets Hoje" FontWeight="Bold" FontSize="14" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource DarkGrayBrush}"/>
                                            <TextBlock x:Name="LblTotalHoje" Text="0" FontSize="36" FontWeight="Bold" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource SuccessBrush}"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource MetricCardStyle}" Background="#FDEDEC">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="⏳" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="Pendentes" FontWeight="Bold" FontSize="14" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource DarkGrayBrush}"/>
                                            <TextBlock x:Name="LblPendentes" Text="0" FontSize="36" FontWeight="Bold" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource AccentBrush}"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource MetricCardStyle}" Background="#FEF9E7">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="🔧" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="Em Atendimento" FontWeight="Bold" FontSize="14" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource DarkGrayBrush}"/>
                                            <TextBlock x:Name="LblEmAtendimento" Text="0" FontSize="36" FontWeight="Bold" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource WarningBrush}"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource MetricCardStyle}" Background="#EBF5FB">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="✅" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="% Atendidos" FontWeight="Bold" FontSize="14" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource DarkGrayBrush}"/>
                                            <TextBlock x:Name="LblTicketsAtendidos" Text="0%" FontSize="36" FontWeight="Bold" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource SecondaryBrush}"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Linha 2 -->
                                    <Border Style="{StaticResource MetricCardStyle}" Background="#E8F8F5">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="✓" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="% Resolvidos" FontWeight="Bold" FontSize="13" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource DarkGrayBrush}"/>
                                            <TextBlock x:Name="LblTicketsResolvidos" Text="0%" FontSize="28" FontWeight="Bold" 
                                                       HorizontalAlignment="Center" Foreground="#16A085"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource MetricCardStyle}" Background="#FDEAEA">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="✗" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="% Não Resolvidos" FontWeight="Bold" FontSize="13" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource DarkGrayBrush}"/>
                                            <TextBlock x:Name="LblTicketsNaoResolvidos" Text="0%" FontSize="28" FontWeight="Bold" 
                                                       HorizontalAlignment="Center" Foreground="#C0392B"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource MetricCardStyle}" Background="#F4F6F7">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="🔧" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="Média Hardware" FontWeight="Bold" FontSize="13" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource DarkGrayBrush}"/>
                                            <TextBlock x:Name="LblMediaHardware" Text="0h" FontSize="28" FontWeight="Bold" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource PrimaryBrush}"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Style="{StaticResource MetricCardStyle}" Background="#F4F6F7">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="💻" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="Média Software" FontWeight="Bold" FontSize="13" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource DarkGrayBrush}"/>
                                            <TextBlock x:Name="LblMediaSoftware" Text="0h" FontSize="28" FontWeight="Bold" 
                                                       HorizontalAlignment="Center" Foreground="{StaticResource PrimaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </UniformGrid>
                            </Grid>
                        </Border>

                        <!-- Gráficos Visuais -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="Indicadores Visuais" 
                                           Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,20"/>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="20">
                                        <TextBlock Text="Taxa de Resolução" FontWeight="Bold" FontSize="16" 
                                                   Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,10"/>
                                        <Border Background="#ECF0F1" CornerRadius="15" Height="30">
                                            <Grid>
                                                <Border x:Name="ProgressResolucaoFill" Background="{StaticResource SuccessBrush}" 
                                                        CornerRadius="15" HorizontalAlignment="Left" Width="0"/>
                                                <TextBlock x:Name="LblProgressResolucao" Text="0% resolvidos" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                           FontWeight="SemiBold" Foreground="White"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="20">
                                        <TextBlock Text="Taxa de Atendimento" FontWeight="Bold" FontSize="16" 
                                                   Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,10"/>
                                        <Border Background="#ECF0F1" CornerRadius="15" Height="30">
                                            <Grid>
                                                <Border x:Name="ProgressAtendimentoFill" Background="{StaticResource SecondaryBrush}" 
                                                        CornerRadius="15" HorizontalAlignment="Left" Width="0"/>
                                                <TextBlock x:Name="LblProgressAtendimento" Text="0% atendidos" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                           FontWeight="SemiBold" Foreground="White"/>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Footer Moderno -->
        <Border Grid.Row="2" Background="{StaticResource PrimaryBrush}" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Border Background="#34495E" CornerRadius="15" Padding="10,5" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#27AE60" Margin="0,0,5,0"/>
                            <TextBlock Text="Sistema Operacional" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                    <TextBlock x:Name="LblStatus" Text="Pronto para utilização" Foreground="#BDC3C7" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <TextBlock Text="Última actualização: " Foreground="#BDC3C7" FontSize="12" VerticalAlignment="Center"/>
                    <TextBlock x:Name="LblUltimaActualizacao" Text="Agora" Foreground="White" FontSize="12" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>