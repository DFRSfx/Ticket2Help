<Window x:Class="Ticket2Help.UI.RelatoriosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Relatórios e Mapas Estatísticos" 
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="Purple" Padding="15">
            <TextBlock Text="Relatórios e Mapas Estatísticos" Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Filtros -->
        <Border Grid.Row="1" Background="LightGray" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Período:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker x:Name="DatePickerInicio" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="até" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker x:Name="DatePickerFim" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <Button x:Name="BtnGerarRelatorio" Content="Gerar Relatório" 
                        Background="Blue" Foreground="White" FontWeight="Bold"
                        Padding="10,5" Click="BtnGerarRelatorio_Click"/>
                <Button x:Name="BtnExportarExcel" Content="Exportar Excel" 
                        Background="Green" Foreground="White" FontWeight="Bold"
                        Padding="10,5" Margin="10,0,0,0" Click="BtnExportarExcel_Click"/>
            </StackPanel>
        </Border>

        <!-- Relatório -->
        <DataGrid Grid.Row="2" x:Name="DataGridRelatorio" Margin="10"
                  AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single"
                  GridLinesVisibility="Horizontal" AlternatingRowBackground="LightGray">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding TipoTicket}" Width="80"/>
                <DataGridTextColumn Header="Colaborador" Binding="{Binding CodigoColaborador}" Width="100"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding NomeColaborador}" Width="150"/>
                <DataGridTextColumn Header="Descrição" Binding="{Binding DescricaoCompleta}" Width="200"/>
                <DataGridTextColumn Header="Data Criação" Binding="{Binding DataHoraCriacao, StringFormat=dd/MM/yyyy HH:mm}" Width="120"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="100"/>
                <DataGridTextColumn Header="Data Atendimento" Binding="{Binding DataHoraAtendimento, StringFormat=dd/MM/yyyy HH:mm}" Width="120"/>
                <DataGridTextColumn Header="Estado Atendimento" Binding="{Binding EstadoAtendimento}" Width="130"/>
                <DataGridTextColumn Header="Tempo (h)" Binding="{Binding TempoAtendimentoHoras}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status -->
        <Border Grid.Row="3" Background="LightGray" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total de registros: " FontWeight="Bold"/>
                <TextBlock x:Name="LblTotalRegistros" Text="0"/>
                <TextBlock Text=" | Período: " Margin="20,0,0,0" FontWeight="Bold"/>
                <TextBlock x:Name="LblPeriodoSelecionado" Text=""/>
            </StackPanel>
        </Border>
    </Grid>
</Window>