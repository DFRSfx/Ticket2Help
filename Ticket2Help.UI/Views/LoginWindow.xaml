<Window x:Class="Ticket2Help.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ticket2Help - Login" 
        Height="550" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Cores modernas -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#3498DB"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#E74C3C"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="DarkGrayBrush" Color="#7F8C8D"/>

        <!-- Gradiente para fundo -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>

        <!-- Estilo para TextBox moderno -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter Property="Background" Value="#F8FBFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#95A5A6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para PasswordBox moderno -->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                <Setter Property="Background" Value="#F8FBFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#95A5A6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botões modernos -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#21618C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#95A5A6"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#566573"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Animações -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                           From="0" To="1" Duration="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                           From="20" To="0" Duration="0:0:0.5"/>
        </Storyboard>

        <Storyboard x:Key="ShakeAnimation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="-10"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="10"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Window.RenderTransform>
        <TranslateTransform/>
    </Window.RenderTransform>

    <Border Background="{StaticResource BackgroundGradient}" CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="10" BlurRadius="30" Opacity="0.3" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Botão de Fechar -->
            <Button x:Name="BtnFechar" 
                    Content="✕" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Width="30" Height="30" 
                    Margin="10" 
                    Background="Transparent" 
                    Foreground="White" 
                    BorderThickness="0" 
                    FontSize="16" 
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="BtnFechar_Click"
                    ToolTip="Fechar aplicação">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E74C3C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Header com Logo -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,40,0,20">
                <Border Background="White" 
                        Width="80" Height="80" 
                        CornerRadius="40" 
                        HorizontalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="3" BlurRadius="10" Opacity="0.3"/>
                    </Border.Effect>
                    <TextBlock Text="🎫" 
                               FontSize="40" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="Ticket2Help" 
                           Foreground="White" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,15,0,5"
                           FontFamily="Segoe UI"/>

                <TextBlock Text="Sistema de Gestão de Tickets" 
                           Foreground="#E8F4FD" 
                           FontSize="14" 
                           HorizontalAlignment="Center"
                           FontFamily="Segoe UI"/>
            </StackPanel>

            <!-- Formulário de Login -->
            <Border Grid.Row="1" 
                    Background="White" 
                    CornerRadius="15,15,0,0" 
                    Margin="0,20,0,0"
                    x:Name="LoginPanel">
                <Border.RenderTransform>
                    <TranslateTransform/>
                </Border.RenderTransform>

                <StackPanel Margin="40,30,40,20">
                    <TextBlock Text="Iniciar Sessão" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryBrush}" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,30"/>

                    <!-- Campo Código -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Código do Colaborador" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource DarkGrayBrush}" 
                                   Margin="5,0,0,8"
                                   FontSize="13"/>
                        <Grid>
                            <TextBox x:Name="TxtCodigo" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Height="45"
                                     KeyDown="TxtCodigo_KeyDown"/>
                            <TextBlock Text="👤 Introduza o seu código" 
                                       IsHitTestVisible="False"
                                       Foreground="#BDC3C7" 
                                       Margin="20,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="13">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=TxtCodigo}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </StackPanel>

                    <!-- Campo Senha -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Palavra-passe" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource DarkGrayBrush}" 
                                   Margin="5,0,0,8"
                                   FontSize="13"/>
                        <Grid>
                            <PasswordBox x:Name="TxtSenha" 
                                         Style="{StaticResource ModernPasswordBoxStyle}"
                                         Height="45"
                                         KeyDown="TxtSenha_KeyDown"/>
                            <TextBlock Text="🔒 Introduza a palavra-passe" 
                                       IsHitTestVisible="False"
                                       Foreground="#BDC3C7" 
                                       Margin="20,0,0,0"
                                       VerticalAlignment="Center"
                                       FontSize="13">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Password, ElementName=TxtSenha}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </StackPanel>

                    <!-- Mensagem de Erro -->
                    <Border x:Name="ErrorPanel" 
                            Background="#FADBD8" 
                            BorderBrush="#E74C3C" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="10" 
                            Margin="0,0,0,15"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock x:Name="LblErro" 
                                       Text="Código ou palavra-passe inválidos." 
                                       Foreground="#C0392B" 
                                       FontSize="12" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Indicador de Carregamento -->
                    <StackPanel x:Name="LoadingPanel" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,0,0,15"
                                Visibility="Collapsed">
                        <Border Width="20" Height="20" 
                                Background="{StaticResource SecondaryBrush}" 
                                CornerRadius="10" 
                                Margin="0,0,8,0">
                            <Border.RenderTransform>
                                <RotateTransform/>
                            </Border.RenderTransform>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Border.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                           From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                        <TextBlock Text="A verificar credenciais..." 
                                   Foreground="{StaticResource DarkGrayBrush}" 
                                   FontSize="12"/>
                    </StackPanel>

                    <!-- Botões -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="BtnLogin" 
                                Grid.Column="0"
                                Content="🚀 Entrar" 
                                Style="{StaticResource ModernButtonStyle}"
                                Height="50"
                                Click="BtnLogin_Click" 
                                IsDefault="True"/>

                        <Button x:Name="BtnCancelar" 
                                Grid.Column="2"
                                Content="❌ Cancelar" 
                                Style="{StaticResource CancelButtonStyle}"
                                Height="50"
                                Click="BtnCancelar_Click" 
                                IsCancel="True"/>
                    </Grid>

                    <!-- Utilizadores de Demonstração -->
                    <Expander Header="👥 Utilizadores de Demonstração" 
                              Margin="0,20,0,0"
                              Foreground="{StaticResource DarkGrayBrush}"
                              FontSize="12">
                        <StackPanel Margin="10">
                            <TextBlock Text="💡 Duplo clique para preencher automaticamente" 
                                       FontSize="10" 
                                       FontStyle="Italic" 
                                       Foreground="#95A5A6" 
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="🔧 Técnico: ADMIN / admin" 
                                       FontSize="11" 
                                       Margin="0,2" 
                                       Cursor="Hand"
                                       MouseEnter="DemoItem_MouseEnter"
                                       MouseLeave="DemoItem_MouseLeave"
                                       MouseLeftButtonDown="Demo_MouseDoubleClick">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F4FD"/>
                                                <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="🔧 Técnico: TEC001 / 123" 
                                       FontSize="11" 
                                       Margin="0,2" 
                                       Cursor="Hand"
                                       MouseEnter="DemoItem_MouseEnter"
                                       MouseLeave="DemoItem_MouseLeave"
                                       MouseLeftButtonDown="Demo_MouseDoubleClick">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F4FD"/>
                                                <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="👤 Colaborador: COL001 / 123" 
                                       FontSize="11" 
                                       Margin="0,2" 
                                       Cursor="Hand"
                                       MouseEnter="DemoItem_MouseEnter"
                                       MouseLeave="DemoItem_MouseLeave"
                                       MouseLeftButtonDown="Demo_MouseDoubleClick">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F4FD"/>
                                                <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="White" 
                    Padding="20,15" 
                    CornerRadius="0,0,15,15">
                <StackPanel>
                    <TextBlock Text="Instituto Politécnico de Gestão e Tecnologia" 
                               Foreground="{StaticResource DarkGrayBrush}" 
                               FontSize="11" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="ISLA Gaia - Programação Avançada 2024/2025" 
                               Foreground="{StaticResource DarkGrayBrush}" 
                               FontSize="10" 
                               HorizontalAlignment="Center" 
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>