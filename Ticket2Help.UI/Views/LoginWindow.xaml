<Window x:Class="Ticket2Help.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ticket2Help - Login" 
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="DarkBlue" Padding="20">
            <TextBlock Text="Ticket2Help" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>

        <!-- Formulário -->
        <StackPanel Grid.Row="1" Margin="40" VerticalAlignment="Center">
            <TextBlock Text="Código do Colaborador:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtCodigo" Height="30" FontSize="14" Padding="5" Margin="0,0,0,15"/>

            <TextBlock Text="Senha:" FontWeight="Bold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="TxtSenha" Height="30" FontSize="14" Padding="5" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnLogin" Content="Entrar" Width="80" Height="35" 
                        Background="Green" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"
                        Click="BtnLogin_Click" IsDefault="True"/>
                <Button x:Name="BtnCancelar" Content="Cancelar" Width="80" Height="35" 
                        Background="Red" Foreground="White" FontWeight="Bold"
                        Click="BtnCancelar_Click" IsCancel="True"/>
            </StackPanel>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="DarkGray" Padding="10">
            <TextBlock Text="Instituto Politécnico de Gestão e Tecnologia - ISLA Gaia" 
                       Foreground="White" FontSize="10" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>